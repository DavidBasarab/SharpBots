<UserControl x:Class="CSRobots.Robot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="80" Width="60">
    <Canvas Width="60" Height="60">
        <TextBlock Name="Speech" Canvas.Top="0" Canvas.Left="0" />
        <Image Name="Body" Width="60" Height="50" Canvas.Top="10" Canvas.Left="0"/>
        <Image Name="Turret" Width="60" Height="50" Canvas.Top="10" Canvas.Left="0"/>
        <Image Name="Radar" Width="60" Height="50" Canvas.Top="10" Canvas.Left="0"/>
        <TextBlock Name="Name" Canvas.Top="60" Canvas.Left="0" />
        <TextBlock Name="Health" Canvas.Top="70" Canvas.Left="0" />
    </Canvas>
</UserControl>
